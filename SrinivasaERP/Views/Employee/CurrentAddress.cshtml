@model CurrentAddress
@{
    ViewData["Title"] = "Current Address";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .profile-container {
        display: flex;
        max-width: 1200px;
        margin: auto;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .profile-sidebar {
        width: 250px;
        background-color: #1f2d3d;
        color: #fff;
        padding: 20px;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

        .profile-sidebar h4 {
            font-weight: bold;
            margin-bottom: 20px;
        }

    .nav-link {
        color: #fff;
        padding: 10px 0;
        display: block;
        font-weight: 500;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

        .nav-link.active {
            background-color: #2f4f6f;
            border-radius: 5px;
        }

    .profile-form {
        flex: 1;
        padding: 30px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control {
        border-radius: 5px;
    }
</style>

<div class="profile-container">
    <div class="profile-sidebar">
        <h4>Profile</h4>
        <a class="nav-link" href="#">Personal Details</a>
        <a class="nav-link active" href="#">Current Address</a>
        <a class="nav-link" href="#">Permanent Address</a>
        <a class="nav-link" href="#">Department</a>
        <a class="nav-link" href="#">Emergency Details</a>
        <a class="nav-link" href="#">Personal Document</a>
    </div>

    <div class="profile-form">
        <h3 class="mb-4">Current Address</h3>

        <form asp-action="CurrentAddress" method="post">
            <div class="form-group row">
                <label asp-for="FlatHouseApartment" class="col-sm-4 col-form-label form-label-right">Flat No., House No., Apartment</label>
                <div class="col-sm-6">
                    <input asp-for="FlatHouseApartment" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="AreaColonyStreet" class="col-sm-4 col-form-label form-label-right">Area, Colony, Street</label>
                <div class="col-sm-6">
                    <input asp-for="AreaColonyStreet" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="Landmark" class="col-sm-4 col-form-label form-label-right">Landmark</label>
                <div class="col-sm-6">
                    <input asp-for="Landmark" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="City" class="col-sm-4 col-form-label form-label-right">Town/City</label>
                <div class="col-sm-6">
                    <select asp-for="City" class="form-control" asp-items="new SelectList(ViewBag.Cities)"></select>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="State" class="col-sm-4 col-form-label form-label-right">State</label>
                <div class="col-sm-6">
                    <select asp-for="State" class="form-control" asp-items="new SelectList(ViewBag.States)"></select>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="PinCode" class="col-sm-4 col-form-label form-label-right">Pin Code</label>
                <div class="col-sm-6">
                    <input asp-for="PinCode" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="offset-sm-4 col-sm-6">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            <br />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
