@model SrinivasaERP.Models.ForgotModel
@{
    ViewData["Title"] = "Forgot Password";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<h2>Forgot Password</h2>

<form asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label for="email">Enter your Email Address or Employee ID:</label>
        <input name="EmployeeIDOrEmail" placeholder="Email or Employee ID" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Send Reset Link</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}
