@model SrinivasaERP.Models.ForgotModel

@{
    ViewData["Title"] = "Forgot Password";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 p-4 shadow rounded bg-light">

            <h2 class="text-center mb-4 fs-3">Forgot Password</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center fs-6">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center fs-6">@TempData["Error"]</div>
            }

            <form asp-action="ForgotPassword" method="post" novalidate class="fs-5">
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center fs-6 pb-2" })

                <div class="form-group mb-3">
                    <label asp-for="EmployeeIDOrEmail" class="form-label fs-5 ps-1">Employee ID or Email</label>
                    <input asp-for="EmployeeIDOrEmail" class="form-control fs-5 p-2" />
                    <span asp-validation-for="EmployeeIDOrEmail" class="text-danger fs-6 ps-1"></span>
                </div>

                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-primary fs-5 p-2">Send Reset Link</button>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info text-center mt-3 fs-6">@ViewBag.Message</div>
            }

        </div>
    </div>
</div>
