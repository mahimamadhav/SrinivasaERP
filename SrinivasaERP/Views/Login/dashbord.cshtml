@{
    ViewData["Title"] = "Dashboard";
}

<div class="main-container">
    <div class="sidebar">
        <div class="sidebar-icon"><i class="fas fa-home"></i></div>
        <div class="sidebar-icon"><i class="fas fa-user"></i></div>
        <div class="sidebar-icon"><i class="fas fa-sitemap"></i></div>
        <div class="sidebar-icon"><i class="fas fa-project-diagram"></i></div>
        <div class="sidebar-icon"><i class="fas fa-file-alt"></i></div>
        <div class="sidebar-icon"><i class="fas fa-cog"></i></div>
    </div>

    <div class="content">
        <div class="header-bar header-banner">
            <div class="banner-text">
                <h1 class="title">SRINIVASA TOURS <br />& TRAVELS</h1>
            </div>
            <div class="user-controls">
                <div class="welcome">Welcome, @ViewBag.Name1<br />@ViewBag.Name</div>
                <form asp-controller="Login" asp-action="Login" method="post">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>

        <div class="tile-grid">
            <div class="tile"><i class="fas fa-user" onclick="location.href='@Url.Action("PersonalDetails", "Profile")'"></i> <span>Profile</span></div>
            <div class="tile"><i class="fas fa-sitemap"></i> <span>Hierarchy</span></div>
            <div class="tile"><i class="fas fa-calendar-alt" onclick="location.href='@Url.Action("Index", "Attendance")'"></i> <span>Attendance</span></div>
            <div class="tile"><i class="fas fa-file-alt" onclick="location.href='@Url.Action("LeaveManagement", "Leave")'"></i> <span>Leave Management</span></div>
            <div class="tile"><i class="fas fa-coins"></i> <span>Finance</span></div>
            <div class="tile"><i class="fas fa-check"></i> <span>Actions</span></div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #fff4e1, #f9ddb0);
        background-attachment: fixed;
    }

    .main-container {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 80px;
        background-color: #a3541a;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .sidebar-icon {
        margin: 20px 0;
        color: #ffeac4;
        font-size: 24px;
        cursor: pointer;
        transition: transform 0.3s ease, color 0.3s ease;
    }

        .sidebar-icon:hover {
            transform: scale(1.2);
            color: #fff;
        }

    .content {
        flex: 1;
        padding: 40px;
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
        background-image: linear-gradient(to bottom right, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.2)), url('https://media.istockphoto.com/id/1157979345/photo/road.jpg?s=612x612&w=0&k=20&c=4SGheF1vs56GMGE_GHiPPycdLF3ii-rXhwXLgqGUAFU=');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        position: relative;
        z-index: 1;
    }


        .content > * {
            position: relative;
            z-index: 1;
        }

    h1.title {
        font-size: 32px;
        font-weight: bold;
        color: #3c2c1a;
        margin: 0 0 10px;
    }

    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .user-controls {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 8px;
    }

    .welcome {
        font-size: 16px;
        font-weight: 500;
        color: #5a3d2a;
        text-align: right;
    }

    .logout-btn {
        background-color: #c0392b;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .logout-btn:hover {
            background-color: #e74c3c;
        }

    .tile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 30px;
        margin-top: 50px;
    }

    .header-banner {
        background: linear-gradient(135deg, #4caf50 0%, #8bc34a 33%, #ffffff 33%, #ffffff 100%);
        padding: 30px 30px 30px 40px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .banner-text {
        color: #1f1f1f;
    }

    .header-banner .title {
        color: #2b2b2b;
        font-size: 30px;
        font-weight: bold;
        line-height: 1.3;
    }

    .header-banner .user-controls {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 8px;
    }

    .header-banner .welcome {
        font-size: 16px;
        font-weight: 500;
        color: #3d3d3d;
        text-align: right;
    }

    .tile {
        background-color: #fff2d9;
        padding: 30px;
        text-align: center;
        border-radius: 15px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

        .tile:hover {
            background-color: #f5d29d;
            transform: translateY(-5px);
        }

        .tile i {
            font-size: 30px;
            display: block;
            margin-bottom: 10px;
            color: #7a4b0f;
        }

    @@media (max-width: 768px) {
        .content

    {
        padding: 20px;
    }

    h1.title {
        font-size: 24px;
    }

    .tile {
        padding: 20px;
        font-size: 16px;
    }

        .tile i {
            font-size: 24px;
        }

    .sidebar {
        width: 60px;
    }

    .sidebar-icon {
        font-size: 20px;
        margin: 15px 0;
    }

    .header-banner {
        flex-direction: column;
        align-items: flex-start;
        padding: 20px;
    }

        .header-banner .user-controls {
            align-items: flex-start;
            text-align: left;
            margin-top: 10px;
        }

        .header-banner .title {
            font-size: 22px;
        }

    .tile-grid {
        grid-template-columns: 1fr;
    }

    }
</style>
