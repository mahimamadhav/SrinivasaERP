@{
    ViewData["Title"] = "Dashboard";
    var userName = ViewBag.UserName;
}

<div class="main-container">
    <div class="sidebar">
        <div class="sidebar-icon"><i class="fas fa-home"></i></div>
        <div class="sidebar-icon"><i class="fas fa-user"></i></div>
        <div class="sidebar-icon"><i class="fas fa-sitemap"></i></div>
        <div class="sidebar-icon"><i class="fas fa-project-diagram"></i></div>
        <div class="sidebar-icon"><i class="fas fa-file-alt"></i></div>
        <div class="sidebar-icon"><i class="fas fa-cog"></i></div>
    </div>

    <div class="content">
        <div class="header-bar">
            <h1 class="title">SRINIVASA TOURS <br />& TRAVELS</h1>
            <div class="welcome">Welcome, @userName</div>
        </div>

        <div class="tile-grid">
            <div class="tile"><i class="fas fa-user"></i> <span>Profile</span></div>
            <div class="tile"><i class="fas fa-sitemap"></i> <span>Hierarchy</span></div>
            <div class="tile"><i class="fas fa-calendar-alt"></i> <span>Attendance</span></div>
            <div class="tile"><i class="fas fa-file-alt"></i> <span>Leave Management</span></div>
            <div class="tile"><i class="fas fa-coins"></i> <span>Finance</span></div>
            <div class="tile"><i class="fas fa-check"></i> <span>Actions</span></div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8e6c2;
    }

    .main-container {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 80px;
        background-color: #9e5a19;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
    }

    .sidebar-icon {
        margin: 20px 0;
        color: #fbd9a0;
        font-size: 24px;
        cursor: pointer;
    }

    .content {
        flex: 1;
        padding: 40px;
        background-color: #f7e2be;
        color: #4b2e15;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
    }

    .title {
        font-size: 28px;
        font-weight: bold;
        color: #4b2e15;
        margin: 0;
    }

    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .welcome {
        font-size: 16px;
        font-weight: 500;
        color: #5a3d2a;
        text-align: right;
    }

    .tile-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 80px;
        margin-top: 80px;
    }

    .tile {
        background-color: #f9deb5;
        padding: 30px;
        text-align: center;
        border-radius: 15px;
        font-size: 18px;
        font-weight: 500;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: background-color 0.2s ease;
    }

        .tile:hover {
            background-color: #f1c784;
        }

        .tile i {
            font-size: 28px;
            display: block;
            margin-bottom: 10px;
        }
</style>