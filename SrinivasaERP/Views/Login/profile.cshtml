<!-- Header -->
<div class="header">
    <img src="~/images/logo.png" alt="Logo" class="logo" />
    <p class="welcome">Welcome, @ViewBag.Name</p>
</div>

<!-- Top Navigation -->
<div class="topnav">
    <a href="#">Profile</a>
    <a href="#">Work Flows</a>
    <a href="@Url.Action("Index", "Attendance")">Attendance</a>
    <a href="@Url.Action("Leave", "Attendance")">Leave</a>
    <a href="#">Finance</a>
    <a href="#">Actions</a>
</div>

<!-- Title -->
<h2 class="page-title">Profile Details</h2>

<!-- Profile Cards -->
<div class="profile-container">
    <div class="card">Personal Details</div>
    <div class="card" onclick="location.href='@Url.Action("CurrentAddress","Employee")'">Current Address</div>
    <div class="card">Permanent Address</div>
    <div class="card">Department</div>
    <div class="card">Emergency Details</div>
    <div class="card">Personal Documents</div>
</div>

<!-- Lucide icons -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        lucide.createIcons();
    });
</script>

<!-- Responsive CSS -->
<style>
   .sidebar {
    position: fixed;
    top:70px; 
    left: 117px;
    bottom: 60px;
    width: 60px;
    background-color: powderblue;
    display: flex;
    flex-direction: column;
