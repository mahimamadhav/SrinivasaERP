    <div class="w-100 d-flex justify-content-between align-items-center ">
        <h2 class="mb-0 fw-bold text-info">Leave Management</h2>
        <button class="btn btn-create btn-primary">Create leave request</button>
    </div>

    <!-- 🔹 Left Side: Leave Balance + Leave Status Table -->
    <div class="col-md-6 mb-4 mt-4">

        <!-- Leave Balance Section -->
        <div class="mb-4">
            <h4>Leave Balance</h4>
            <div class="d-flex gap-3">
                <div class="balance-card border rounded p-3 text-center border-dark bg-secondary-subtle">Casual Leave<br><strong>5</strong></div>
                <div class="balance-card border rounded p-3 text-center border-dark bg-primary-subtle">Sick Leave<br><strong>3</strong></div>
                <div class="balance-card border rounded p-3 text-center border-dark bg-info-subtle">Other Leave<br><strong>2</strong></div>
            </div>
        </div>

        <!-- Leave Status Table -->
        <div class="mb-4 mt-5">
            <h4 class="text-info">Leave Status</h4>
            <table class="table table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Leave Type</th>
                        <th>From</th>
                        <th>Status</th>
                    </tr>
